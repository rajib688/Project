<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Our Blood Bank </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link href="~/Content/CustomCss/custom-style.css" rel="stylesheet" />
    <link href="~/Content/CustomCss/style.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Rokto", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "margin-right: 362px;" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About Us ", "About", "Home")</li>
                    <li>@Html.ActionLink("Search Donors ", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Add Blood Request ", "Create", "Requests")</li>                  
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="footer-col ">
                    <h4>Rokto</h4>
                    <p>Rokto is an automated blood service that connects blood searchers with voluntary blood donors in a moment through SMS and website.</p>
                    <div class="social_links">
                        <a href=""><i class="fab fa-facebook-f"></i></a>
                        <a href=""><i class="fab fa-youtube"></i></a>
                        <a href=""><i class="fab fa-twitter"></i></a>
                        <a href=""><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
                <div class="footer-col">
                    <h4>Important Links</h4>
                    <ul>
                        <li><a href="#">Home</a></li>
                        <li><a href="#">Add Blood Request</a></li>
                        <li><a href="#">Search Blood Donors in Bangladesh</a></li>
                        <li><a href="#">Frequently Asked Questions (FAQs)</a></li>
                        <li><a href="#">About Us</a></li>
                        <li><a href="#">Contact Us</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>About Blood</h4>
                    <ul>
                        <li><a href="#">What is blood?</a></li>
                        <li><a href="#">What is blood donation?</a></li>
                        <li><a href="#">Who can donate blood?</a></li>
                        <li><a href="#">How often can I donate blood?</a></li>
                        <li><a href="#">Different Blood Terms</a></li>
                        <li><a href="#">Different Blood Groups</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <div class="CustomFooter text-center">
        <footer>
            <p>&copy; @DateTime.Now.Year - Blood Bank</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
